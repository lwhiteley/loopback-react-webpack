{
  "restApiRoot": "/api",
  "clientRoot": "/app",
  "host": "0.0.0.0",
  "port": 3000,
  "development": true,
  "templateRoot": "templates",
  "templateLayouts": "templates/layouts",
  "staticFolderMount": "/assets",
  "staticFolders": ["public"],
  "maxAge": "1d",
  "remoting": {
    "context": {
      "enableHttpContext": false
    },
    "rest": {
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false,
    "errorHandler": {
      "disableStackTrace": false
    }
  },
  "legacyExplorer": false
}
